# === SERVER CONFIGURATION ===
NODE_ENV=development
PORT=3000
API_VERSION=v1

# === DATABASE ===
MONGO_URI=your_mongodb_connection_string

# === SECURITY SECRETS ===
# Generate new secrets using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=generate_using_crypto_randomBytes_64
JWT_REFRESH_SECRET=generate_different_secret
SESSION_SECRET=generate_another_secret
ENCRYPTION_KEY=generate_using_crypto_randomBytes_32

# Token Expiry
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# === FRONTEND ===
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# === API KEYS ===
GEMINI_API_KEY=your_gemini_api_key

# === RATE LIMITING ===
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# === FILE UPLOAD ===
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# === LOGGING ===
LOG_LEVEL=info
LOG_FILE_PATH=./logs
